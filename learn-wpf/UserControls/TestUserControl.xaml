<UserControl x:Class="learn_wpf.TestUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:learn_wpf"
             mc:Ignorable="d" 
             x:Name="userControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="White">
        <TextBlock Text="{Binding ContentTextBox, ElementName=userControl, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        <Button Content="{Binding ContentButton, ElementName=userControl, UpdateSourceTrigger=PropertyChanged}" Click="ActionExecuting"></Button>
    </StackPanel>
</UserControl>
