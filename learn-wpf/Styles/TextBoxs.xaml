<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:learn_wpf">
    <Style TargetType="TextBox" x:Key="TextBoxBase">
        <Setter Property="local:TextBoxAttachedProperty.CheckLength" Value="True"/>

        <Style.Triggers>
            <Trigger Property="local:TextBoxAttachedProperty.CheckLength" Value="False">
                <Setter Property="Tag" Value="Vui lòng nhập đủ 10 ký tự!"/>
                <Setter Property="Foreground" Value="Red"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>